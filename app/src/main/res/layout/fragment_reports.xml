<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">


    <!-- AppBar (optional if your activity has one) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_reports_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Download Reports"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Report 1 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_report1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1F3238"
        app:layout_constraintTop_toBottomOf="@id/text_reports_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/text_report1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Expenditure Analysis"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Report 2 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_report2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1F3238"
        app:layout_constraintTop_toBottomOf="@id/card_report1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_report2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Adherence Tracking"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Report 3 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_report3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1F3238"
        app:layout_constraintTop_toBottomOf="@id/card_report2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_report3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Savings Goal Progress"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Report 4 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_report4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1F3238"
        app:layout_constraintTop_toBottomOf="@id/card_report3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_report4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category-Wise Expense Distributio"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Report 5 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_report5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1F3238"
        app:layout_constraintTop_toBottomOf="@id/card_report4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_report5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forecasted Savings Trends"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
