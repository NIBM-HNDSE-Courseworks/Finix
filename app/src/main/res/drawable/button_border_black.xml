<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FF5252"> <!-- ripple color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#11000000"/> <!-- light transparent fill to show ripple -->
            <stroke android:width="1.5dp" android:color="#000000"/> <!-- keep border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</ripple>
