GRANT ORDS_ADMINISTRATOR_ROLE TO SYS;

GRANT ORDS_ADMINISTRATOR_ROLE TO FINIX_USERNAME;

COMMIT;





TRUNCATE TABLE FINIX_USERNAME.TRANSACTIONS;

DELETE FROM FINIX_USERNAME.TRANSACTIONS;
COMMIT;

-- This command resets the internal sequence counter
ALTER TABLE FINIX_USERNAME.TRANSACTIONS MODIFY (
    id GENERATED BY DEFAULT AS IDENTITY (START WITH 1)
);


TRUNCATE TABLE FINIX_USERNAME.BUDGETS;

DELETE FROM FINIX_USERNAME.BUDGETS;
COMMIT;

-- This command resets the internal sequence counter
ALTER TABLE FINIX_USERNAME.BUDGETS MODIFY (
    id GENERATED BY DEFAULT AS IDENTITY (START WITH 1)
);


TRUNCATE TABLE FINIX_USERNAME.SAVINGS_GOALS;

DELETE FROM FINIX_USERNAME.SAVINGS_GOALS;
COMMIT;

-- This command resets the internal sequence counter
ALTER TABLE FINIX_USERNAME.SAVINGS_GOALS MODIFY (
    id GENERATED BY DEFAULT AS IDENTITY (START WITH 1)
);


TRUNCATE TABLE FINIX_USERNAME.CATEGORIES;

DELETE FROM FINIX_USERNAME.CATEGORIES;
COMMIT;

-- This command resets the internal sequence counter
ALTER TABLE FINIX_USERNAME.CATEGORIES MODIFY (
    id GENERATED BY DEFAULT AS IDENTITY (START WITH 1)
);

TRUNCATE TABLE FINIX_USERNAME.SYNC_LOG;

-- Note: DELETE is redundant after TRUNCATE but kept for pattern consistency.
DELETE FROM FINIX_USERNAME.SYNC_LOG;
COMMIT;

-- This command resets the internal sequence counter
ALTER TABLE FINIX_USERNAME.SYNC_LOG MODIFY (
    log_id GENERATED BY DEFAULT AS IDENTITY (START WITH 1)
);